{% extends 'layouts/base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="row ">
    <div class="col-md-6 mx-auto">
        <h1 class="my-3 text-center">Please sign in</h1>
        <p class="mb-3 text-center text-muted">Your pins are waiting for you.</p>
<form method="post">
    {% if error %}
        <div class="alert alert-danger mb-3">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    <div class="form-group">
        <label for="inputEmail">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" name="password" id="password" class="form-control" required>
    </div>
    

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >
    <div class="d-flex justify-content-between" >
        <div class="form-group">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" name="_remember_me" id="remember_me"> 
            <label class="form-check-label" for="remember_me" >Remember me</label>
        </div>
    </div>
        <a href="#">Forgot password ?</a>
    </div>
        
   

    <button class="btn btn-lg btn-primary my-3 btn-block" type="submit">
        Sign in
    </button>
    <p class="my-4 mb-3 text-center text-muted">Not registred yet ? <a href="#">Create an account</a></p>
</form>
</div>
</div>
{% endblock %}
