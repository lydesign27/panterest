{% extends 'layouts/base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-6 mx-auto">
        {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>Create an ccount</h1>

    {{ form_start(registrationForm,{'attr': {'novalidate': 'novalidate'}} ) }}
        {{ form_row(registrationForm.firstName) }}
        {{ form_row(registrationForm.lastName) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn btn-lg btn-primary btn-block" formnovalidate>Register</button>

        <p class="mt-5 mb-3 text-center text-muted">
            Already have an account? <a href="{{ path('app_login')}}">Login in</a>
        </p>
    {{ form_end(registrationForm) }}

    </div>
</div>
    
{% endblock %}
